<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/toolbar"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="@string/expensedetails"
        android:layout_gravity="center"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/text_hint_color"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtdescreption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/Descreption"

            android:textColor="@color/text_color"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold" />
    <TextView
        android:id="@+id/txtAdvance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/Advance"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_10sdp"
        />

    <TextView
            android:id="@+id/txtCreatedOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/CreatedOn"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_10sdp"
           />

    <TextView
        android:id="@+id/txtAddress"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="@string/Address"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_10sdp" />
    <TextView
        android:id="@+id/txtCustomerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="@string/CustomerName"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_10sdp" />

    <TextView
        android:id="@+id/txtMeetingDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="@string/meetingdate"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_10sdp" />
    <TextView
        android:id="@+id/txtExpenseType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="@string/expensetype"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_10sdp" />

    <ImageView
        android:id="@+id/image_uploaded"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:background="@drawable/ic_receipt" />



    <Button
        android:id="@+id/btn_close"
        android:layout_width="@dimen/_200sdp"
        android:text="@string/close"
        android:layout_gravity="center"
        android:background="@drawable/btn"
        android:textColor="@color/white_color"
        android:textSize="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_height="wrap_content" />



</LinearLayout>

