<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <ImageView
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:src="@drawable/logo"
                android:layout_height="70dp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edt_name"
                    android:layout_width="match_parent"
                    android:hint="@string/hint_name"
                    android:layout_margin="5dp"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:layout_height="50dp" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edt_address"
                    android:layout_width="match_parent"
                    android:hint="@string/hint_address"
                    android:layout_margin="5dp"
                    android:inputType="textPostalAddress"
                    android:paddingLeft="10dp"
                    android:layout_height="50dp" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edt_place"
                    android:layout_width="match_parent"
                    android:hint="@string/hint_place"
                    android:layout_margin="5dp"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:layout_height="50dp" /></android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_city"
                android:layout_width="match_parent"

                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edt_city"
                    android:layout_width="match_parent"
                    android:hint="@string/hint_city"
                    android:layout_margin="5dp"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:layout_height="50dp" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:hint="@string/hint_email"
                    android:layout_margin="5dp"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="10dp"
                    android:layout_height="50dp" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edt_phone"
                    android:layout_width="match_parent"
                    android:hint="@string/hint_phone"
                    android:layout_margin="5dp"
                    android:maxLength="12"
                    android:inputType="phone"
                    android:paddingLeft="10dp"
                    android:layout_height="50dp" />
            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:background="#5a9bd5"
                android:padding="10dp"
                android:layout_marginTop="30dp"
                android:weightSum="3">
                <Button
                    android:id="@+id/btn_back"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/arrow"/>
                <TextView
                    android:id="@+id/btn_save"
                    android:layout_width="wrap_content"
                    android:text="Save"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="150dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>
</ScrollView>