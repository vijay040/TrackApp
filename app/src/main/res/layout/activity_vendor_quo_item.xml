<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/txt_quotation_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/txt_total_amt"
            android:text="@string/vendor_name"
            android:textColor="@color/them_color"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_container_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_total_amt"
            android:layout_marginLeft="@dimen/_10sdp"
            android:ems="20"
            android:text="@string/container"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:id="@+id/txt_total_amt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_quotation_no"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="@string/total_amt"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:id="@+id/txt_valid_till"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_charge_amt"
            android:layout_marginLeft="@dimen/_10sdp"
            android:ems="20"
            android:text="@string/valid_till"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_8sdp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_charge_amt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_container_size"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="@string/crg_amt"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_8sdp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_vendor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt_container_size"
            android:layout_alignBottom="@+id/txt_container_size"
            android:layout_centerHorizontal="true"
            android:text="@string/vendor_name"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:id="@+id/txt_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_valid_till"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="@string/margin"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:id="@+id/txt_amnt_idr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_margin"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="@string/amt_in_idr"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_8sdp" />


        <ImageView
            android:id="@+id/imz_down"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/txt_quotation_no"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/ic_down" />
    </RelativeLayout>


</RelativeLayout>