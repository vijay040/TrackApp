  <ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:background="#5a9bd5"
        android:layout_height="180dp">
    <ImageView
        android:id="@+id/imz_loadreceipt"
        android:layout_width="match_parent"
       android:src="@drawable/rec"
        android:layout_weight="1"
      android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/btn_load"
            android:layout_width="wrap_content"
            android:text="Add Receipt"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <android.support.design.widget.TextInputLayout
    android:id="@+id/input_layout_amount"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">
    <EditText
        android:id="@+id/edt_amount"
        android:layout_width="match_parent"
        android:hint="Amount"
        android:paddingLeft="10dp"
        android:layout_height="50dp" />
</android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_expensetype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
        android:id="@+id/edt_Expensetype"
        android:layout_width="match_parent"
        android:hint="Expense type"
        android:paddingLeft="10dp"
            android:layout_height="50dp"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/edt_date"
        android:layout_width="match_parent"
        android:hint="Date"
        android:inputType="numberDecimal"
        android:clickable="false"
        android:focusable="false"
        android:paddingLeft="10dp"
        android:layout_height="50dp" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/edt_location"
        android:layout_width="match_parent"
        android:hint="location"
        android:inputType="numberDecimal"
        android:clickable="false"
        android:focusable="false"
        android:paddingLeft="10dp"
        android:layout_height="50dp" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_vendor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/edt_vendor"
        android:layout_width="match_parent"
        android:hint="Vendor Name"
        android:inputType="textPersonName"
        android:clickable="false"
        android:focusable="false"
        android:paddingLeft="10dp"
        android:layout_height="50dp" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_comment"
        android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
        android:id="@+id/edt_comment"
                android:hint="Comment"
                android:inputType="textMultiLine"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:scrollbars="vertical" />
        </android.support.design.widget.TextInputLayout>
        <EditText
        android:id="@+id/edt_date1"
        android:layout_width="match_parent"
        android:hint=""
        android:inputType="datetime"
        android:clickable="false"
        android:focusable="false"
        android:paddingLeft="10dp"
        android:layout_height="50dp"/>
        </LinearLayout>
        </ScrollView>

