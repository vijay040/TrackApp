<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_65sdp"
        android:src="@drawable/ic_meetingdetail" />
    <TextView
        android:layout_width="wrap_content"
        android:text="@string/Meetingdetails"
        android:layout_gravity="center"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/text_hint_color"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtdescreption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_toRightOf="@id/img"
        android:text="@string/Descreption"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtpurpose"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_toRightOf="@id/img"
        android:text="@string/Purpose"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_12sdp" />

    <TextView
        android:id="@+id/txtcustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_toRightOf="@id/img"
        android:text="@string/Client"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_12sdp" />

    <TextView
        android:id="@+id/txtcontactperson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_toRightOf="@id/img"
        android:text="@string/ContactPerson"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_12sdp" />

    <TextView
        android:id="@+id/txtagenda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_toRightOf="@id/img"
        android:text="@string/Agenda"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_12sdp" />

    <TextView
        android:id="@+id/txtdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_toRightOf="@id/img"
        android:text="@string/Date"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_12sdp" />

    <TextView
        android:id="@+id/txttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_toRightOf="@id/img"
        android:text="@string/Time"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_12sdp" />

    <TextView
        android:id="@+id/txtaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_toRightOf="@id/img"
        android:text="@string/Address"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_12sdp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_marginRight="@dimen/_40sdp"
       >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_alignParentLeft="true">

            <ImageView
                android:id="@+id/imgMap"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/ic_google" />

            <TextView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgMap"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/Location"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_10sdp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
           android:layout_alignParentRight="true"
           >

            <ImageView
                android:id="@+id/start"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:background="@drawable/ic_start"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/start"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textColor="@color/text_color"
                android:text="@string/StartMeeting"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp" />

        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progressbar"
            style="?android:attr/progressBarStyle"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@+id/image"
            android:indeterminateDrawable="@drawable/progressbar"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:layout_marginTop="15dp" />

    </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
