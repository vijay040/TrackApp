<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp">

        <TextView
            android:id="@+id/txt_quotation_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="@string/vendor_name"
            android:textColor="@color/them_color"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_15sdp">

        </RelativeLayout>

        <TextView
            android:id="@+id/txt_container_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_quotation_no"
            android:layout_marginLeft="@dimen/_10sdp"
            android:ems="20"
            android:text="@string/container"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_10sdp" />
        <TextView
            android:id="@+id/txt_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_container_size"
            android:layout_marginLeft="@dimen/_10sdp"
            android:ems="20"
            android:text="@string/margin"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/txt_exchange_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="@string/exchange"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_8sdp" />


    </RelativeLayout>


</RelativeLayout>