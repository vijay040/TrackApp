<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white_color"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:background="@color/white_color"
        android:visibility="gone"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/_5sdp"
                android:onClick="backImage"
                android:id="@+id/back_image">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/logo" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:id="@+id/fix_it_image"
                    android:src="@drawable/logo" />
            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <View
        android:id="@+id/divider10"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/enter_full_name"
        android:background="@color/view_devider" />

    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/user_profile_image_background" />

    <RelativeLayout
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_gravity="center_horizontal"

        android:layout_marginTop="@dimen/_8sdp"

        android:background="@drawable/btn"

        android:id="@+id/layLogOut">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"
            android:text="@string/logout"
            android:gravity="center"
            android:id="@+id/text_save"
            android:textColor="#6d6e71"
            android:textSize="@dimen/_12sdp"
            android:src="@drawable/logo" />
    </RelativeLayout>


    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/imgProfile"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@color/view_devider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_15sdp"
            android:id="@+id/image_select_language"
            android:src="@drawable/logo"/>
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:singleLine="true"
            android:layout_toRightOf="@+id/image_select_language"
            android:background="@color/white_color"
            android:drawableLeft="@drawable/logo"
            android:textSize="@dimen/_11sdp"
            android:textColor="#6d6e71"
            android:paddingLeft="@dimen/_5sdp"
            android:drawablePadding="@dimen/_15sdp"
            android:hint="@string/txt_full_name" />

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_alignParentRight="true"
            android:id="@+id/image_select_language_d_down"
            android:src="@drawable/logo"/>
    </RelativeLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/enter_full_name"
        android:background="@color/view_devider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:layout_below="@+id/view_2_professional_screen_2"
        android:weightSum="2"
        android:id="@+id/linear_layout_professional_names"
        android:orientation="horizontal">


        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white_color"
            android:hint="@string/edt_txt__name"
            android:singleLine="true"
            android:id="@+id/edt_txt_first_name"
            android:paddingLeft="@dimen/_15sdp"
            android:textColor="#6d6e71"
            android:textSize="@dimen/_11sdp"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/view_devider"
            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white_color"
            android:hint="@string/edt_txt_last_name"
            android:singleLine="true"
            android:id="@+id/edt_txt_last_name"
            android:paddingLeft="@dimen/_15sdp"
            android:textColor="#6d6e71"
            android:textSize="@dimen/_11sdp"/>



    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:id="@+id/view_professional_screen_2_contact_no"
        android:layout_below="@+id/edt_txt_contact_no"
        android:background="@color/view_devider"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:layout_below="@+id/view_professional_screen_2_contact_no"
        android:background="@color/white_color"
        android:layout_marginTop="@dimen/_3sdp"
        android:hint="@string/EmailAddress"
        android:inputType="textEmailAddress"
        android:id="@+id/edt_txt_email_id"
        android:drawableLeft="@drawable/ic_email"
        android:paddingLeft="@dimen/_15sdp"
        android:textColor="#6d6e71"
        android:singleLine="true"
        android:drawablePadding="@dimen/_20sdp"
        android:textSize="@dimen/_11sdp"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:id="@+id/view_personal_number"
        android:layout_below="@+id/edt_txt_password_professional"
        android:background="@color/view_devider"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:layout_below="@+id/view_professional_screen_2_password"
        android:background="@color/white_color"
        android:layout_marginTop="@dimen/_3sdp"
        android:hint="@string/Mobile"
        android:id="@+id/edt_txt_conf_personal_number"
        android:paddingLeft="@dimen/_15sdp"
        android:textColor="#6d6e71"
        android:drawablePadding="@dimen/_20sdp"
        android:drawableLeft="@drawable/ic_phone"
        android:singleLine="true"
        android:textSize="@dimen/_11sdp"/>




    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:id="@+id/view_professional_screen_2_email"
        android:layout_below="@+id/edt_txt_email_id"
        android:background="@color/view_devider"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:layout_below="@+id/view_professional_screen_2_email"
        android:background="@color/white_color"
        android:layout_marginTop="@dimen/_3sdp"
        android:hint="@string/password"
        android:gravity="center_vertical"
        android:id="@+id/edt_txt_password_professional"
        android:drawableLeft="@drawable/ic_password"
        android:paddingLeft="@dimen/_15sdp"
        android:textColor="#6d6e71"
        android:drawablePadding="@dimen/_20sdp"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textSize="@dimen/_11sdp"/>





    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:id="@+id/view_professional_screen_2_password"
        android:layout_below="@+id/edt_txt_password_professional"
        android:background="@color/view_devider"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:layout_below="@+id/view_professional_screen_2_password"
        android:background="@color/white_color"
        android:layout_marginTop="@dimen/_3sdp"
        android:hint="@string/Address"
        android:id="@+id/edt_txt_home_address"
        android:drawableLeft="@drawable/ic_loc"
        android:drawablePadding="@dimen/_20sdp"
        android:paddingLeft="@dimen/_15sdp"
        android:textColor="#6d6e71"
        android:singleLine="true"
        android:textSize="@dimen/_11sdp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:layout_below="@+id/edt_txt_home_address"
        android:background="@color/white_color"
        android:layout_marginTop="@dimen/_3sdp"
        android:hint="@string/posotion"
        android:id="@+id/edt_txt_position"
        android:drawableLeft="@drawable/ic_designation"
        android:drawablePadding="@dimen/_20sdp"
        android:paddingLeft="@dimen/_15sdp"
        android:textColor="#6d6e71"
        android:singleLine="true"
        android:textSize="@dimen/_11sdp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:layout_below="@+id/edt_txt_position"
        android:background="@color/white_color"
        android:layout_marginTop="@dimen/_3sdp"
        android:hint="@string/department"
        android:id="@+id/edt_txt_department"
        android:drawableLeft="@drawable/ic_departmnt"
        android:drawablePadding="@dimen/_20sdp"
        android:paddingLeft="@dimen/_15sdp"
        android:textColor="#6d6e71"
        android:singleLine="true"
        android:textSize="@dimen/_11sdp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:layout_below="@+id/edt_txt_department"
        android:background="@color/white_color"
        android:layout_marginTop="@dimen/_3sdp"
        android:hint="@string/manager"
        android:id="@+id/edt_txt_manager"
        android:drawableLeft="@drawable/ic_manager"
        android:drawablePadding="@dimen/_20sdp"
        android:paddingLeft="@dimen/_15sdp"
        android:textColor="#6d6e71"
        android:singleLine="true"
        android:textSize="@dimen/_11sdp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:layout_below="@+id/edt_txt_manager"
        android:background="@color/white_color"
        android:layout_marginTop="@dimen/_3sdp"
        android:hint="@string/joiningdate"
        android:id="@+id/edt_txt_joiningdate"
        android:drawableLeft="@drawable/ic_join"
        android:drawablePadding="@dimen/_20sdp"
        android:paddingLeft="@dimen/_15sdp"
        android:textColor="#6d6e71"
        android:singleLine="true"
        android:textSize="@dimen/_11sdp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:layout_below="@+id/edt_txt_joiningdate"
        android:background="@color/white_color"
        android:layout_marginTop="@dimen/_3sdp"
        android:hint="@string/role"
        android:id="@+id/edt_txt_role"
        android:drawableLeft="@drawable/ic_role"
        android:drawablePadding="@dimen/_20sdp"
        android:paddingLeft="@dimen/_15sdp"
        android:textColor="#6d6e71"
        android:singleLine="true"
        android:textSize="@dimen/_11sdp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:id="@+id/view_professional_screen_2_conf_pwd"
        android:layout_below="@+id/edt_txt_conf_password_professional"
        android:background="@color/view_devider"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"

        >
        <RelativeLayout
            android:id="@+id/rel_save"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/edit_text_description_drawable"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Submit"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_12sdp"
                android:textAllCaps="true"
                android:layout_centerInParent="true"/>

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>