<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_13sdp"
        android:background="@drawable/ic_person" />
    <TextView
        android:id="@+id/textview_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/image"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_toEndOf="@+id/image"
        android:drawableLeft="@drawable/ic_locsignin"
        android:text="Sign In "
        android:textColor="#5fb0c9"
        android:textSize="@dimen/_15sdp" />
    <TextView
        android:id="@+id/textview_signout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textview_signin"
        android:layout_below="@+id/textview_signin"
        android:drawableLeft="@drawable/ic_locsignout"
        android:text="Sign Out "
       android:layout_marginTop="@dimen/_5sdp"
        android:textColor="#5fb0c9"
        android:textSize="@dimen/_15sdp" />
       </RelativeLayout>