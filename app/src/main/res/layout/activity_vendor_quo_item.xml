<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp">

        <TextView
            android:id="@+id/txt_quotation_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/txt_container_size"
            android:text="@string/vendor_name"
            android:textColor="@color/them_color"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/txt_container_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_quotation_no"
            android:layout_marginLeft="@dimen/_10sdp"
            android:ems="20"
            android:text="@string/container"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_10sdp" />
        <TextView
            android:id="@+id/txt_valid_till"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_container_size"
            android:layout_marginLeft="@dimen/_10sdp"
            android:ems="20"
            android:text="@string/valid_till"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/txt_liner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txt_quotation_no"
            android:layout_toEndOf="@+id/txt_container_size"
            android:text="@string/liner"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_8sdp" />
        <TextView
            android:id="@+id/txt_custmr_amt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_below="@+id/txt_valid_till"
            android:text="@string/cust_amt"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_8sdp" />
        <TextView
            android:id="@+id/txt_charge_amt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_custmr_amt"
            android:text="@string/crg_amt"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_8sdp" />

        <ImageView
            android:id="@+id/imz_down"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignTop="@+id/txt_container_size"
            android:layout_toEndOf="@+id/txt_container_size"
            android:background="@drawable/ic_down" />
    </RelativeLayout>


</RelativeLayout>