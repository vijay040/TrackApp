<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_dialog_layout_design_user_input"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/them_color"
    android:orientation="vertical"
    android:padding="@dimen/_15sdp">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rejection Reason"

        android:textColor="@color/white_color"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <EditText
        android:id="@+id/edt_rejection_message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:layout_below="@+id/edtCustomer"
        android:layout_centerHorizontal="true"
        android:background="@drawable/commentbck"
        android:gravity="top"
        android:editable="false"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="#000"
        android:textColorHint="#000" />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edt_message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:hint="Enter Something"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:textCursorDrawable="@drawable/drable_edittext"
        app:met_baseColor="@color/text_color"
        app:met_bottomTextSize="@dimen/_1sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        app:met_floatingLabel="highlight"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColorHint="@color/white_color"
        app:met_floatingLabelTextSize="@dimen/_10sdp"
        app:met_primaryColor="@color/white_color" />
</LinearLayout>